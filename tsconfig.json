{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@actors/*": ["actors/*"],
      "@models/*": ["models/*"],
      "@engine/*": ["engine/*"]
    }
  }
}
